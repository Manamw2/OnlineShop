@page "/productdetails/{productId:int}"
@using Shared.Dtos.Product
@using Services
@inject ProductService ProductService

@if(product!=null){
    <div class="flex justify-center items-center max-h-screen mt-32">
        <div class="flex flex-col justify-center items-center space-y-8">
            <img src=@product.ImageUrl alt="" class="h-80">
            <h2 class="text-black text-2xl md:text-4xl font-bold text-center">@product.Name</h2>
            <p class="text-xs text-gray-900 text-center">@product.Description</p>
        </div>
    </div>

}

@code{
    [Parameter]
    public int productId { get; set; }
    private ProductDto product;
    protected override async Task OnInitializedAsync(){
        product = await ProductService.GetProductByIdAsync(productId);
    }
}    
